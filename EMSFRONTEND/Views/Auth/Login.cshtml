@model EMSFRONTEND.Models.LoginRequestModel

@{
    ViewBag.Title = "Login";
}

<!-- Add Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        text-align: left;
        color: black;
        margin-bottom: 30px; /* Increased bottom margin */
        font-size: 28px;
    }

    .login-container {
        display: flex;
        max-width: 800px; /* Reduced width */
        margin: 60px auto; /* Increased top margin */
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        padding: 0;
    }

    .form-container {
        padding: 40px; /* Increased padding */
        width: 60%; /* Keep form width at 60% */
        min-height: 450px; /* Increased height */
    }

    .image-container {
        width: 40%; /* Keep image width */
        border-radius: 0 15px 15px 0;
    }

        .image-container img {
            width: 100%;
            height: auto; /* Maintain aspect ratio */
            object-fit: cover;
            border-radius: 0 15px 15px 0;
        }

    .form-group {
        position: relative;
        margin-bottom: 20px; /* Increased margin */
    }

    label {
        font-weight: bold;
        color: #333;
        font-size: 16px;
    }

    input[type="text"],
    input[type="password"],
    select {
        width: 100%;
        padding: 12px 40px; /* Padding to make space for the icons */
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        box-sizing: border-box; /* Ensures padding is included in total width */
    }

        input[type="text"]:focus,
        input[type="password"]:focus,
        select:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Icons style */
    .form-group i {
        position: absolute;
        top: 12px; /* Adjusted top position */
        left: 12px;
        color: #007bff;
        font-size: 16px; /* Reduced icon size */
    }

    .btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
        font-size: 18px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .login-link {
        text-align: center;
        margin-top: 15px;
        color: #333;
        font-size: 16px;
    }

        .login-link a {
            color: #007bff;
            text-decoration: none;
        }

            .login-link a:hover {
                color: #0056b3;
            }
</style>

<div class="login-container">
    <!-- Form Section -->
    <div class="form-container">
        <h1>Login</h1>
        <form asp-action="Login" method="post">
            <!-- Username Field with Icon -->
            <div class="form-group">
                <i class="fas fa-user"></i> <!-- Font Awesome user icon -->
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field with Icon -->
            <div class="form-group">
                <i class="fas fa-lock"></i> <!-- Font Awesome lock icon -->
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Role Dropdown with Icon -->
            @* <div class="form-group">
                <i class="fas fa-users"></i> <!-- Font Awesome users icon -->
                <select asp-for="Role" class="form-control" style="padding-left: 40px;">
                    <!-- Added padding to avoid overlap -->
                    <option value="">Select Role</option>
                    <option value="Employee">Employee</option>
                    <option value="Manager">Manager</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div> *@

            <!-- Submit Button -->
            <button type="submit" class="btn">Login</button>
        </form>

        <p class="login-link">
            Don't have an account? <a asp-controller="Auth" asp-action="Signup">Sign up here</a>.
        </p>
    </div>

    <!-- Image Section -->
    <div class="image-container">
        <img src="~/images/signin-image.jpg" alt="Login Image" />
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

























