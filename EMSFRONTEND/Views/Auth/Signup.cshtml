@model EMSFRONTEND.Models.UsersModel

@{
    ViewData["Title"] = "Signup";
}

<!-- Add Font Awesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f8f8f8; /* Changed background color */
        font-family: 'Arial', sans-serif;
    }

    h1 {
        text-align: left;
        color: black;
        margin-bottom: 30px; /* Increased bottom margin */
        font-size: 28px;
    }

    .signup-container {
        display: flex;
        max-width: 800px; /* Set max width */
        margin: 60px auto; /* Increased top margin */
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        align-items: center; /* Center image vertically */
    }

    .form-container {
        padding: 40px; /* Increased padding */
        width: 60%; /* Keep form width at 60% */
        min-height: 500px; /* Increased height */
    }

    .image-container {
        width: 40%; /* Keep image width */
        border-radius: 0 15px 15px 0;
        display: flex; /* Center the image vertically */
        align-items: center; /* Center the image vertically */
        justify-content: center; /* Center the image horizontally */
    }

        .image-container img {
            width: 100%;
            height: auto; /* Maintain aspect ratio */
            object-fit: cover;
            border-radius: 0 15px 15px 0;
        }

    .form-group {
        position: relative;
        margin-bottom: 20px; /* Increased margin */
    }

    label {
        font-weight: bold;
        color: #333;
        font-size: 16px;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    input[type="date"], /* Ensures date input matches other styles */
    select {
        width: 100%;
        padding: 12px 40px; /* Padding to make space for the icons */
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        box-sizing: border-box; /* Ensures padding is included in total width */
        transition: border-color 0.3s, box-shadow 0.3s; /* Smooth transition */
    }

        input[type="text"]:focus,
        input[type="password"]:focus,
        input[type="email"]:focus,
        input[type="date"]:focus { /* Added focus styles for date input */
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    /* Icons style */
    .form-group i {
        position: absolute;
        top: 12px; /* Adjusted top position */
        left: 12px;
        color: #007bff;
        font-size: 16px; /* Reduced icon size */
    }

    .btn {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 12px;
        border-radius: 8px;
        width: 100%;
        font-size: 18px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .login-link {
        text-align: center;
        margin-top: 15px;
        color: #333;
        font-size: 16px;
    }

        .login-link a {
            color: #007bff;
            text-decoration: none;
        }

            .login-link a:hover {
                color: #0056b3;
            }
</style>

<div class="signup-container">
    <div class="form-container">
        <h1 class="text-center">Signup</h1>
        <form asp-action="Signup" method="post">
            <div class="form-group">
                <i class="fas fa-user"></i> <!-- Font Awesome user icon -->
                <input asp-for="Username" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-lock"></i> <!-- Font Awesome lock icon -->
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-envelope"></i> <!-- Font Awesome email icon -->
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-user-tag"></i> <!-- Font Awesome name icon -->
                <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
               @*  <label asp-for="DateOfJoining">Date of Joining</label> *@
                <input asp-for="DateOfJoining" class="form-control" type="date" />
                <span asp-validation-for="DateOfJoining" class="text-danger"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-users"></i> <!-- Font Awesome role icon -->
                <select asp-for="Role" class="form-control" id="roleSelection" style="padding-left: 40px;">
                    <option value="" disabled selected>Role</option> <!-- Placeholder option -->
                    <option value="Manager">Manager</option>
                    <option value="Employee">Employee</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>


            <div class="form-group" id="managerSelection" style="display:none;">
                <i class="fas fa-users"></i>
                <select asp-for="ManagerName" class="form-control" style="padding-left: 40px;">
                    <option value="" disabled selected> Manager</option>
                    @foreach (var manager in ViewBag.Managers as List<EMSFRONTEND.Models.UsersModel>)
                    {
                        <option value="@manager.FullName">@manager.FullName</option>
                    }
                </select>
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn">Signup</button>
        </form>

        <p class="login-link">
            Already have an account? <a href="/Auth/Login">Login</a>.
        </p>
    </div>

    <div class="image-container">
        <img src="~/images/signup-image.jpg" alt="Signup Image" />
    </div>
</div>

@section Scripts {
    <script>
        // Show/Hide Manager selection dropdown based on role selection
        document.getElementById("roleSelection").addEventListener("change", function () {
            var role = this.value;
            var managerSelection = document.getElementById("managerSelection");

            if (role === "Employee") {
                managerSelection.style.display = "block";
            } else {
                managerSelection.style.display = "none";
            }
        });
    </script>
}





        