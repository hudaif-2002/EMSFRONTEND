@model EMSFRONTEND.Models.TaskModel

<h2>Assign Task to Employee</h2>

<!-- Display validation summary -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="AssignTask" method="post">
    <div class="form-group">
        <label for="TaskName">Task Name</label>
        <input asp-for="TaskName" class="form-control" />
        <span asp-validation-for="TaskName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DeadlineDate">Deadline Date</label>
        <input asp-for="DeadlineDate" type="date" class="form-control" />
        <span asp-validation-for="DeadlineDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AssignedToUserId">Assign to Employee</label>
        <select asp-for="UserId" class="form-control">
            <option value="">-- Select Employee --</option>
            @foreach (var employee in ViewBag.Employees)
            {
                    <option value="@employee.UserId">@employee.Username</option>
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Resources">Resources</label>
        <textarea asp-for="Resources" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Assign Task</button>
</form>
