@model List<EMSFRONTEND.Models.TaskModel>

<h2>Tasks List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Task Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Assigned Date</th>
            <th>Deadline Date</th>
            <th>Resources</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
                <tr>
                    <td>@task.TaskId</td>
                    <td>@task.TaskName</td>
                    <td>@task.Description</td>
                    <td>@task.TaskStatus</td>
                    <td>@task.AssignedDate.ToShortDateString()</td>
                    <td>@task.DeadlineDate.ToShortDateString()</td>
                    <td>@task.Resources</td>
                </tr>
        }
    </tbody>
</table>
