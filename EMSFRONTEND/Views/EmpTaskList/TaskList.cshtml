@model List<TaskModel>

@{
    ViewData["Title"] = "Task List";
}

<h2>Assigned Tasks</h2>

<table>
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskName</td>
                <td>@task.Description</td>
                <td>@task.DeadlineDate</td>
                <td>@task.TaskStatus</td>
            </tr>
        }
    </tbody>
</table>
