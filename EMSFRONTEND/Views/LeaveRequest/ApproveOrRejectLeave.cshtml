@{
}
 
@model IEnumerable<EMSFRONTEND.Models.LeaveRequestModel>

<h2>Approve or Reject Leave Requests</h2>

<table>
    <thead>
        <tr>
            <th>From Date</th>
            <th>To Date</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5">No leave requests found.</td>
            </tr>
        }
        else
        {
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.FromDate.ToShortDateString()</td>
                    <td>@request.ToDate.ToShortDateString()</td>
                    <td>@request.Reason</td>
                    <td>@request.LeaveStatus</td>
                    <td>
                        <form method="post" asp-action="ApproveLeave">
                            <input type="hidden" name="requestId" value="@request.LeaveId" />
                            <button type="submit">Approve</button>
                        </form>
                        <form method="post" asp-action="RejectLeave">
                            <input type="hidden" name="requestId" value="@request.LeaveId" />
                            <button type="submit">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="ApproveOrRejectLeave">Back</a>
