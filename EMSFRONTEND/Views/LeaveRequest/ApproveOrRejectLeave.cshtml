@{
}
 
@model IEnumerable<EMSFRONTEND.Models.LeaveRequestwithFullDetailsDto>


<!DOCTYPE html>
<html>
<head>
    <title>Approve or Reject Leave Requests</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3B4xPXHvnC+aV+3273Q0Au79+wdfa8d70nK4V60/65r547596196027E6508X" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            No leave requests available.
        </div>

    }
    else
    {
    <h2>Approve or Reject Leave Requests</h2>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>From Date</th>
                <th>To Date</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            
            
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.FullName</td>
                        <td>@request.FromDate.ToShortDateString()</td>
                        <td>@request.ToDate.ToShortDateString()</td>
                        <td>@request.Reason</td>
                        <td>@request.LeaveStatus</td>
                        <td>
                            <div class="d-flex">
                                <form method="post" asp-action="ApproveLeave">
                                    <input type="hidden" name="requestId" value="@request.LeaveId" />
                                    <button type="submit" class="btn btn-success me-2">
                                        <i class="bi bi-check-circle-fill"></i> Approve
                                    </button>
                                </form>
                                <form method="post" asp-action="RejectLeave">
                                    <input type="hidden" name="requestId" value="@request.LeaveId" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle-fill"></i> Reject
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            
        </tbody>
    </table>
    }
    <div class="mt-3">
        <a href="@Url.Action("ManagerView", "Dashboard")" class="btn btn-outline-primary">Back to Dashboard</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C8fC4ZtX65r547596196027E6508X/b4801690a930171/27568701270406" crossorigin="anonymous"></script>
</body>
</html>