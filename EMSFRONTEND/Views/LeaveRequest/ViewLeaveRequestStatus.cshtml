@model IEnumerable<EMSFRONTEND.Models.LeaveRequestModel>

<h2>Leave Status Summary</h2>

<div class="card">
    <div class="card-header d-flex justify-content-center">
        <h3 class="card-title">Leave Requests</h3>
    </div>
    <div class="card-body">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                No leave requests available.
            </div>
        }
        else
        {
            <table id="leaveRequestsTable" class="table table-striped table-bordered" style="width: 100%;">
                <thead>
                    <tr>
                        <th>Leave ID</th>
                        <th>From Date</th>
                        <th>To Date</th>
                        <th>Reason</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.LeaveId</td>
                            <td>@request.FromDate.ToShortDateString()</td>
                            <td>@request.ToDate.ToShortDateString()</td>
                            <td>@request.Reason</td>
                            <td>@request.LeaveStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("EmployeeView", "Dashboard")" class="btn btn-outline-primary">Back to Dashboard</a>
</div>


