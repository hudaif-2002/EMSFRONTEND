@{
}
@model EMSFRONTEND.Models.PerformanceWithFullNameDto

<h2 class="text-center mb-4">My Performance</h2>

<div class="container">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            No performance data available.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Tasks Assigned</th>
                        <th>Completed Tasks</th>
                        <th>Performance Percentage (%)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.NumberOfTasksAssigned</td>
                        <td>@Model.CompletedCount</td>
                        <td>
                            @if (Model.NumberOfTasksAssigned > 0)
                            {
                                @(Model.PerformancePercentage.ToString("0.00") + "%")
                            }
                            else
                            {
                                @("N/A")
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }

    <div class="d-flex justify-content-center mt-4">
        <a href="@Url.Action("EmployeeView", "Dashboard")" class="btn btn-outline-primary">Back to Dashboard</a>
    </div>
</div>
