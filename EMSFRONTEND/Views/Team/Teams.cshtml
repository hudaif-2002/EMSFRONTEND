@model List<EMSFRONTEND.Models.UsersModel> 

<h2>Employees Under You</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Manager Name</th>
                <th>Date of Joining</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Username</td>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Role</td>
                    <td>@employee.ManagerName</td>
                    <td>@employee.DateOfJoining.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a href="@Url.Action("ManagerView", "Dashboard")" class="btn btn-outline-primary">Back to Dashboard</a>
</div>

