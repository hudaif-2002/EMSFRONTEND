@model List<EMSFRONTEND.Models.UsersModel>

<h2>Employees Under You</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var employee in Model)
        {
            <div class="col-md-4 mb-3">
                <!-- Adjust the column size as needed -->
                <div class="card" style="background-color:rgb(232 236 240)">
                    <div class="card-body">
                        <h5 class="card-title"><strong>Full Name:  </strong>@employee.FullName</h5>
                        <p class="card-text"><strong>Username:</strong> @employee.Username</p>
                        <p class="card-text"><strong>Email:</strong> @employee.Email</p>
                        <p class="card-text"><strong>Role:</strong> @employee.Role</p>
                        <p class="card-text"><strong>Manager Name:</strong> @employee.ManagerName</p>
                        <p class="card-text"><strong>Date of Joining:</strong> @employee.DateOfJoining.ToShortDateString()</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No employees found.</p>
}
























